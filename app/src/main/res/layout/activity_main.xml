<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <Button
                android:text="@string/map_button_text"
                android:layout_width="wrap_content"
                android:layout_height="108dp"
                android:id="@+id/map_button"
                android:layout_weight="1"
                app:icon="@drawable/fishingtool"
                app:backgroundTint="#03A9F4"
               />

        <Button
                android:text="Scanner"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:id="@+id/scan_button"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="229dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="0dp" android:layout_marginTop="310dp"
                app:layout_constraintTop_toBottomOf="@+id/map_button" android:layout_marginEnd="154dp"
                app:layout_constraintEnd_toEndOf="parent"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>