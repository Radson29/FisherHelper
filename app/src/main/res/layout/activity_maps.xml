<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

    tools:context=".MapsActivity"
    android:name="com.google.android.gms.maps.SupportMapFragment">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

        <EditText
                android:id="@+id/marker_name_input"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="nazwa łowiska" />

        <Button
                android:id="@+id/add_marker_button"
                android:layout_width="wrap_content"
                app:backgroundTint="#03A9F4"
                android:layout_height="wrap_content"
                android:text="Dodaj łowisko" />

    </LinearLayout>

    <fragment
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:context=".MapsActivity" />

    <TextView
            android:id="@+id/temperature_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#000000"
            android:text="Temperatura: " />

    <TextView
            android:id="@+id/weather_description_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#000000"
            android:text="Opis pogody: " />

    <Button
            android:id="@+id/show_nearest_fishing_spots_button"
            android:layout_width="match_parent"
            app:backgroundTint="#03A9F4"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="Pokaż najbliższe łowiska" />

</LinearLayout>
